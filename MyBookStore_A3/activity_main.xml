<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="scroll"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fl_fasion"
            android:layout_height="210dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/fashion">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fasion"
                android:layout_gravity="bottom"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="#C1756D6D">
            </TextView>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fl_music"
            android:layout_height="210dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/music">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music"
                android:layout_gravity="bottom"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="#C1756D6D">
            </TextView>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fl_computers"
            android:layout_height="210dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/computers">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computers"
                android:layout_gravity="bottom"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="#C1756D6D">
            </TextView>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fl_cooking"
            android:layout_height="210dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/cooking">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cooking"
                android:layout_gravity="bottom"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="#C1756D6D">
            </TextView>
        </FrameLayout>


    </LinearLayout>


</ScrollView>